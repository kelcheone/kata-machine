{
    "compilerOptions": {
        "outDir": "dist",
        "allowJs": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "resolveJsonModule": true,
        "noImplicitReturns": true,
        "esModuleInterop": true,
        "target": "esnext",
        "module": "commonjs",
        "baseUrl": "src",
        "paths": {
            "@code/*": ["scripts/code/*"]
        }
    },
    "include": ["./src/**/*", "scripts/code"],
    "exclude": ["node_modules"]
}
